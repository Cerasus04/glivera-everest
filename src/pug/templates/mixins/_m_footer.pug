mixin footer
	footer.footer
		.footer__in
			.footer__wrap
				.footer__logo
					+logo({
						img : 'logo_footer',
						type : 'png',
						href : '#',
						label : 'logo',
						altText : 'logo'
					})
				.footer__wrap_bottom
					.footer__social
						p.footer__text Платформа AI
						+social({
							mod_block: 'social_list--footer',
							items: [
								{name_icon: 'fb', mod_icon: 'icon--size_mod'},
								{name_icon: 'tw', mod_icon: 'icon--size_mod'},
								{name_icon: 'rss', mod_icon: 'icon--size_mod'},
								{name_icon: 'youtube', mod_icon: 'icon--size_mod'}
							]
						})
					.footer__copyright 
						a.footer__copyright_link(href='#') 2020 Everest. ALL RIGHTS RESERVED
			.footer__about.about_list
				.footer__text Кто мы
				+menu({
						gl_class: 'about_list',
						items: [
							{title : 'Что мы делаем'},
							{title : 'Направления работы'},
							{title : 'Компетенции'},
							{title : 'Команда'},
							{title : 'Новости'},
							{title : 'Партнеры'},
							{title: 'Контакты'}
						]
					})
			.footer__solutions.solutions_list
				.footer__text Аналитика
				.footer__text.footer__text--dec Решения: 
				+menu({
						gl_class: 'solutions_list',
						items: [
							{title : 'Банки'},
							{title : 'Страхование'},
							{title : 'Здравоохранение'},
							{title : 'Транспорт и логистика'},
							{title : 'Госудерственный сектор'},
							{title : 'Ритейл и eCommerce'},
							{title: 'Телекомуникации'}
						]
				})
			.footer__contact.contact
				.footer__text О нас
				- list = [{text: 'EVEREST - опытный интегратор digital-технологий, продуктов и сервисов для цифровой трансформации бизнеса, корпоративного и государственного секторов.'},{text: 'Разрабатывает и внедряет решения на базе AI, используя методы Data Data и ML для совершенствования и автоматизации бизнес-процессов клиентов.'},{text: 'Всегда оперирует тенденциями цифрового мира и концентрирует свои усилия на уникальности и инновационности методов в работе с каждым клиентом над созданием и адаптацией digital-идей и концепций.'}]
				each item in list
					p.contact__text= item.text
				.contact__feadback
					.contact__feadback_text Будьте в курсе лучших digital-решений для вашего бизнеса
					.contact__form
						+form_input({
							label: 'Введите email',
							id: 'email',
							placeholder: 'Email',
							required: true
						})
						+button({
							ariaLabel: 'Подписаться',
							text: 'Подписаться'
						})
